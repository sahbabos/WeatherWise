<% if @eight_day_forecast %>
  <% if @from_cache %>
    <p>Data loaded from cache.</p>
  <% else %>
    <p>Data retrieved from OpenWeatherMap.</p>
  <% end %>

  <h2>8-Day Weather Forecast</h2>

  <% @eight_day_forecast.each do |day| %>
    <div class="forecast-day">
      <h3><%= day[:dt] %> <!-- Format date as needed --></h3>
      <p>Temperature: <%= day[:temp][:day] %>Â°C</p>
      <p>Weather: <%= day[:weather].first[:main] %></p>
      <!-- Add more details as required -->
    </div>
  <% end %>
<% else %>
  <p>Forecast data is not available.</p>
<% end %>
